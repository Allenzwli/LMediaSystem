<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="?selectableItemBackground"
    android:layout_width="fill_parent"
    android:padding="8dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/albumIV"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icon_album_dark"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/albumIV"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/songNameTV"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="test"
            style="@style/ListItemTitleStyle"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="6dip">

            <TextView
                android:id="@+id/artistTV"
                android:layout_width="wrap_content"
                android:text="test3"
                android:layout_height="wrap_content"
                android:maxWidth="140dp"
                style="@style/ListItemSubTitleStyle"/>

            <View
                android:id="@+id/divider_subtitle"
                android:background="#1f000000"
                android:layout_width="1.0dp"
                android:layout_height="8dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_toRightOf="@id/artistTV"
                android:layout_centerVertical="true" />

            <TextView
                android:text="test2"
                android:id="@+id/albumTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="140dp"
                android:layout_toRightOf="@id/divider_subtitle"
                android:layout_centerVertical="true"
                style="@style/ListItemSubTitleStyle" />

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>